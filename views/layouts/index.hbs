    <script>
        $(document).ready(function () {

            var i = 0;
            nav = $('nav');

            $(window).resize(function () {
                if ($(window).width() > 750) {
                    nav.show();
                    i = 0;
                }
                else {
                    nav.hide();
                }
            });

            $('.dropdown').click(function () {
                nav.show();
                i++;

                $('.content').click(function () {
                    nav.hide();
                    i = 0;
                })

                if (i == 2) {
                    nav.hide();
                    i = 0;
                }
            })
        });
